{
  "name": "portfolio-website",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "apps/site",
    "apps/cms"
  ],
  "scripts": {
    "dev:site": "npm --workspace apps/site run dev",
    "dev:cms": "npm --workspace apps/cms run dev",
    "build:site": "npm --workspace apps/site run build",
    "build:cms": "npm --workspace apps/cms run build",
    "lint:site": "npm --workspace apps/site run lint",
    "lint:cms": "npm --workspace apps/cms run lint",
    "test:site": "npm --workspace apps/site run test",
    "test:cms": "npm --workspace apps/cms run test"
  },
  "engines": {
    "node": ">=20"
  }
}
